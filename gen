iimport random
import string

# VARIABLES #
# Define specific ASCII characters (e.g., alphabetic, numerical, and symbols) to use 
alpha = "abcdefghjkmnpqrstuvwxyz"
ALPHA = "ABCDEFGHJKMNPQRSTUVWXYZ"
NUM = "0123456789"
SYM = "@#$&"
# Combine the different ASCII characters into one variable
chars = "".join([alpha, ALPHA, NUM, SYM])

# Prompt the user for the length of the string
length = int(input("Length (default: 18) of the password? ") or "18")

def generate_password(length: int) -> str:

    # Use random.choices to generate a list of 'length' random characters from 'chars'
    password = random.choices(chars, k=length)

    # Convert the list of characters to a string and return it
    return "".join(password)


# Generate and print the random string
password = generate_password(length)
print(password)
